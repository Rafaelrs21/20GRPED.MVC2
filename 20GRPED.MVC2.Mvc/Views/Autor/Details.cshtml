@using _20GRPED.MVC2.Domain.Model.Entities
@model _20GRPED.MVC2.Domain.Model.Entities.AutorEntity

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>AutorEntity</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UltimoNome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UltimoNome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nascimento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nascimento)
        </dd>
    </dl>
</div>

<table class="table">
    <thead>
    <tr>
        <th>Nome</th>
        <th>Isbn</th>
        <th>Lançamento</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Livros) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Isbn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lancamento)
            </td>
            <td>
                <a asp-action="Edit" asp-controller="Livro" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-controller="Livro" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-controller="Livro" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
